<div class="min-h-screen bg-slate-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-2xl space-y-10 bg-white p-10 rounded-2xl shadow-xl">
    <div class="text-center space-y-2">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900">Actualizar cuenta</h2>
      <p class="text-sm text-slate-600">Gestiona la información de tu perfil y credenciales.</p>
    </div>

    <div class="space-y-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <%= form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name),
                 html: { method: :put, class: "space-y-6" }) do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>

        <div>
          <%= f.label :username, class: "block text-sm font-medium text-slate-700" %>
          <%= f.text_field :username,
                autocomplete: "username",
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>

        <div>
          <%= f.label :bio, class: "block text-sm font-medium text-slate-700" %>
          <%= f.rich_text_area :bio,
                rows: 3,
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>

        <div>
          <%= f.label :avatar, class: "block text-sm font-medium text-slate-700" %>
          <%= f.file_field :avatar,
                class: "mt-2 block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="rounded-lg border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-800">
            Actualmente esperando confirmación para: <strong><%= resource.unconfirmed_email %></strong>
          </div>
        <% end %>

        <div>
          <div class="flex flex-col gap-1 sm:flex-row sm:items-center sm:justify-between">
            <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-slate-700" %>
            <span class="text-xs text-slate-500">Déjalo en blanco si no deseas cambiarlo.</span>
          </div>
          <%= f.password_field :password,
                autocomplete: "new-password",
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
          <% if @minimum_password_length %>
            <p class="mt-2 text-xs text-slate-500">Mínimo de <%= @minimum_password_length %> caracteres.</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-slate-700" %>
          <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>

        <div>
          <div class="flex flex-col gap-1 sm:flex-row sm:items-center sm:justify-between">
            <%= f.label :current_password, "Contraseña actual", class: "block text-sm font-medium text-slate-700" %>
            <span class="text-xs text-slate-500">Necesitamos tu contraseña actual para confirmar los cambios.</span>
          </div>
          <%= f.password_field :current_password,
                autocomplete: "current-password",
                class: "mt-2 block w-full rounded-lg border border-slate-200 bg-white px-4 py-2 text-slate-900 shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>

        <div>
          <%= f.submit "Guardar cambios",
                class: "w-full inline-flex justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>
      </div>
    <% end %>

    <div class="space-y-3 rounded-xl border border-red-200 bg-red-50 p-6">
      <h3 class="text-base font-semibold text-red-700">Cancelar mi cuenta</h3>
      <p class="text-sm text-red-600">Si ya no deseas utilizar el servicio, puedes eliminar tu cuenta de forma permanente.</p>
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <%= button_to "Eliminar cuenta", registration_path(resource_name),
                    method: :delete,
                    data: { confirm: "¿Estás seguro?", turbo_confirm: "¿Estás seguro?" },
                    class: "inline-flex justify-center rounded-lg border border-red-200 bg-white px-4 py-2 text-sm font-semibold text-red-600 transition hover:border-red-300 hover:bg-red-100 cursor-pointer" %>
        <%= link_to "Volver", cars_path,
                    class: "inline-flex justify-center rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-300 hover:bg-slate-100 cursor-pointer" %>
      </div>
    </div>
  </div>
</div>
