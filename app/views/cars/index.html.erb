<p class="text-green-500"><%= notice %></p>

<% content_for :title, "Cars" %>

<div class="bg-gray-100 py-8">
  <div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-4">Cars</h1>
    <div id="cars" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @cars.each do |car| %>
        <div class="bg-white shadow-md rounded-lg p-4">
          <%= render car %>
          <div class="mt-4">
            <%= link_to "Show this car", car, class: "px-4 py-2 bg-blue-500 text-white rounded-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-8">
      <%= link_to "New car", new_car_path, class: "px-4 py-2 bg-blue-500 text-white rounded-lg" %>
    </div>
  </div>
</div>
