<div class="container mx-auto px-4 py-8">
  <div class="flex items-center space-x-4">
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "h-24 w-24 rounded-full object-cover" %>
    <% else %>
      <div class="h-24 w-24 rounded-full bg-gray-200 flex items-center justify-center">
        <span class="text-gray-500">No Avatar</span>
      </div>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold"><%= @user.username %></h1>
      <p class="text-gray-600"><%= @user.email %></p>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-semibold">Bio</h2>
    <div class="prose mt-2">
      <%= @user.bio %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-xl font-semibold"><%= @user.username %>'s Cars</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-4">
      <% @user.cars.each do |car| %>
        <%= link_to car_path(car), class: "block border rounded-lg p-4 hover:shadow-lg" do %>
          <h3 class="font-bold"><%= car.year %> <%= car.make %> <%= car.model %></h3>
          <%# You might want to add a car image here later %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
